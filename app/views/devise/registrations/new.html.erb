<div class="column row">
  <div class="medium-6 large-4 medium-centered large-centered columns">
    <div class="row">
      <div class="medium-12 columns">
        <h2>Sign up</h2>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="field medium-12 columns">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="field medium-12 columns">
          <%= f.label :password, "Password (#{@minimum_password_length.to_s + ' character minimum' if @minimum_password_length})" %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="field medium-12 columns">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="actions medium-12 columns">
          <%= f.submit "Sign up", class: "button expanded" %>
        </div>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
